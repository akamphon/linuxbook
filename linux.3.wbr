\thtt{ 6  7  8  9 10 11 12}
\thtt{13 14 15 16 17 18 19}
\thtt{20 21 22 23 24 25 26}
\thtt{27 28 29 30}

\thtt{ส. เม.ย. 5 01:55:25 JST 2003}
\end{MyEx}
